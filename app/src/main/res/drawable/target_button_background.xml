<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E74C3C"/> <!-- Red when pressed -->
            <corners android:radius="8dp"/>
            <stroke android:color="#C0392B" android:width="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3498DB"/> <!-- Blue when normal -->
            <corners android:radius="8dp"/>
            <stroke android:color="#2980B9" android:width="2dp"/>
        </shape>
    </item>
</selector>